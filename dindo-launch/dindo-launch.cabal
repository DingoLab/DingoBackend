name:                dindo-launch
version:             0.0.1.0
synopsis:            The launcher of each module
description:         A launcher of each part of API
-- license:
license-file:        LICENSE
author:              Qinka
maintainer:          qinka@live.com
copyright:           Copyright (C) 2016 DingoLab
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

flag dindo-um
  description: Build dindo's UM module
  default:  False

executable dindo-um
  main-is:             Main.lhs
  build-depends:       base >=4.8 && <4.9
                     , dindo-usrmanage == 0.0.1.0
                     , dindo-common == 0.0.1.0
                     , cmdargs >= 0.10
  hs-source-dirs:      src
  default-language:    Haskell2010
  if flag(dindo-um)
    buildable:         True
  else
    buildable:         False
